@model EMS.Models.UserViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<br />
<br />


@if (Model.Errors.Count > 0) {
    <ul>
        @foreach (var item in Model.Errors)
        {
            <li>
                @item
            </li>
        }
    </ul>
}

<form class="form-horizontal" method="post" action="Create">
    @Html.HiddenFor(x => x.Id)


    <div class="form-group row">
        @Html.LabelFor(x => x.Username, new { @class = "col-md-1" })
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Password, new { @class = "col-md-1" })
        <div class="col-md-4">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Email, new { @class = "col-md-1" })
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.PhoneNumber, new { @class = "col-md-1" })
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-1 col-md-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>






